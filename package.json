{
  "name": "starterkit-php-node",
  "description": "starterkit/php-node",
  "type": "module",
  "scripts": {
    "vite:local": "vite --config vite.local.config.js",
    "vite:host": "vite --config vite.host.config.js",
    "server:local": "php -S localhost:8888 router.php",
    "server:host": "php -S $(node scripts/get-ip.mjs):8888 router.php",

    "dev": "node scripts/set-env.mjs && concurrently \"npm:server:local\" \"npm:vite:local\" -c yellow,green",
    "host": "node scripts/set-env.mjs && concurrently \"npm:server:host\" \"npm:vite:host\" -c yellow,green",

    "build": "node scripts/set-env.mjs && vite build",
    "preview": "concurrently \"npm run build\" \"npm run server:local\" -c yellow,green"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "normalize.css": "^8.0.1",
    "sass": "^1.68.0",
    "vite": "^5.4.10"
  },
  "dependencies": {
    "concurrently": "^9.1.0",
    "dotenv": "^16.4.5"
  }
}